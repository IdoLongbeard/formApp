<div class="loginArea">
    <form action="/login" method="post" id="login" class="form-signin">

        <h1 class="h3 mb-3 font-weight-normal">Please Log in</h1>
        <label for="email" class="sr-only">Email address</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Email address"
            aria-describedby="emailHelp" required="true">
        <small id="emailHelp" class="form-text text-muted">Don't forget to register first</small>
        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Password"
            required="true">

        <button class="btn btn-lg btn-dark btn-block" type="submit">Log in</button>
        <a class="btn btn-lg btn-dark btn-block" href="/register">Register</a>


